{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom", "es2017"],
    "module": "commonjs",
    "jsx": "react",
    "sourceMap": false,
    "outDir": "./dist/",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@assets": ["./src/assets"],
      "@assets/*": ["./src/assets/*"],
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"],
      "@core": ["./src/core"],
      "@core/*": ["./src/core/*"],
      "@mocks": ["./src/mocks"],
      "@mocks/*": ["./src/mocks/*"],
      "@pages": ["./src/pages"],
      "@pages/*": ["./src/pages/*"],
      "@screens": ["./src/screens"],
      "@screens/*": ["./src/screens/*"],
      "@store": ["./src/store"],
      "@store/*": ["./src/store/*"],
      "@styles": ["./src/styles"],
      "@styles/*": ["./src/styles/*"],
      "@utils": ["./src/utils"],
      "@utils/*": ["./src/utils/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*", "./tests/**/*", "./jest.config.ts", "./playwright.config.ts"],
}
